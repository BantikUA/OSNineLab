<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.client.ChatController">
  <center>
    <TextArea fx:id="messageArea" editable="false" wrapText="true" style="-fx-font-size: 16px; -fx-font-family: 'Arial';" />
  </center>
  <bottom>
    <HBox spacing="10">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
      </padding>
      <TextField fx:id="inputField" promptText="Enter message..." HBox.hgrow="ALWAYS" />
      <Button text="Send" onAction="#handleSendMessage" />
    </HBox>
  </bottom>
</BorderPane>


