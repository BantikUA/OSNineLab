<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.client.authorizeController">
  <center>
    <TabPane>
      <!-- Вкладка реєстрації -->
      <Tab text="Sign up">
        <VBox spacing="10" alignment="CENTER">
          <padding>
            <Insets left="60" right="60" />
          </padding>
          <Label text="Sign up to Client"/>
          <Label fx:id="errorMsgLogIn" style="-fx-font-size: 14px; -fx-text-fill: red;" visible="false" managed="false"/>
          <VBox alignment="CENTER_LEFT">
            <Label text="Username" HBox.hgrow="ALWAYS"/>
            <TextField fx:id="loginFieldSignUp"/>
          </VBox>
          <VBox alignment="CENTER_LEFT">
            <Label text="Password" HBox.hgrow="ALWAYS"/>
            <PasswordField fx:id="passwordFieldSignUp"/>
          </VBox>
          <Button text="Sign up" onAction="#onSignUpButtonClick"/>
        </VBox>
      </Tab>
      <!-- Вкладка входу -->
      <Tab text="Log in">
        <VBox spacing="10" alignment="CENTER">
          <padding>
            <Insets left="60" right="60" />
          </padding>
          <Label text="Log in to Client"/>
          <Label fx:id="errorMsgSignUp" style="-fx-font-size: 14px; -fx-text-fill: red;" visible="false" managed="false"/>
          <VBox alignment="CENTER_LEFT">
            <Label text="Username" HBox.hgrow="ALWAYS"/>
            <TextField fx:id="loginFieldLogIn"/>
          </VBox>
          <VBox alignment="CENTER_LEFT">
            <Label text="Password" HBox.hgrow="ALWAYS"/>
            <PasswordField fx:id="passwordFieldLogIn"/>
          </VBox>
          <Button text="Log in" onAction="#onLogInButtonClick"/>
        </VBox>
      </Tab>
    </TabPane>
  </center>
</BorderPane>
